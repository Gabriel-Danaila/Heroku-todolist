<%- include("header") -%>

<div class="box" id="heading">
  <h1><%= listTitle %></h1>
</div>

<div class="box">
  <% newListItems.forEach(function(item){%>
  <!-- form pentru a delete new items -->

  <form action="/delete" method="post">
    <div class="item">
      <input
        type="checkbox"
        name="checkbox"
        value="<%=item._id %>"
        onChange="this.form.submit()"
      />
      <!-- aicea am pus ca sa fie submit the form chiar daca nu are un buton folosindune de proprietatea de onchange de la checkbox -->
      <p><%= item.name %></p>
    </div>
    <!-- inputul de jos este ca sa ne ajute sa stergem din lista corespunzatoare ce items dorim si ne folosim si de value al lui ca sa facem asta-->
    <input type="hidden" name="listName" value="<%=listTitle%>" />
  </form>
  <% }) %>
  <!-- form pentru a add new items -->
  <form class="item" action="/" method="post">
    <input
      type="text"
      name="newItem"
      placeholder="New Item"
      autocomplete="off"
    />
    <button type="submit" name="list" value="<%=listTitle%>">+</button>
  </form>
</div>

<%- include("footer") -%>
